
<div class="container-fluid py-5">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">BẢNG VÙNG MIỀN</h1>
    <p class="mb-4">Hiển thị danh sách các miền hiện có</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin vùng miền</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên miền</th>
                            <th>Mô tả</th>
                            <th>Vị trí</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                   
                    <tbody>
                        <% regions.forEach(function(region){ %>
                            <tr>
                                <th><%=region.dataValues.Name%></th>
                                <th><%=region.dataValues.RDesc%></th>
                                <th><%=region.dataValues.Location%></th>
                                <th><a href="/admin/region/update/<%=region.dataValues.IDR%>" class="btn btn-primary">Sửa</a></th>
                                <th><form method="POST" action="/admin/region/delete/<%=region.dataValues.IDR%>"><button class="btn btn-danger">Xóa</button></form></th>
                            </tr>
                          <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>